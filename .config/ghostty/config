# Window
gtk-adwaita=false
gtk-titlebar=false
window-theme=dark

# Keybinds
keybind = ctrl+v=paste_from_clipboard
keybind = ctrl+v=paste_from_selection
keybind = ctrl+t=new_tab

# Background
background="black"
background-opacity=0.6

# Selection Colour
selection-background=#aaaaaa

# Fonts
font-size=13
font-family="B612 Mono"
font-family="FiraCode Nerd Font Mono"
bold-is-bright=true

# Clipboard
copy-on-select=clipboard

# Cursor
cursor-style=underline

# Term
term="xterm-256color"
